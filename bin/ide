#!/bin/sh

usage() {
  cat <<EOM
Usage: ide [COMMAND]

Commands:
  [none]    Start tmux and separate window for ide mode.
  close     Close current tmux session.
  kill      Close all tmux session.

EOM

exit 1
}

if [ $# -eq 0 ]; then

  tmux split-window -v -p 30
  tmux split-window -h -p 66
  tmux split-window -h -p 50

elif [ $1 = "close" ]; then

  tmux kill-session

elif [ $1 = "kill" ]; then

  tmux kill-server

else

  usage

fi
